.bbox {
  display: flex;
  height: calc(100vh - 45rpx);
  overflow: hidden;
}
.bbox .scrollLeft {
  flex: 1;
  display: flex;
  justify-content: center;
}
.bbox .scrollLeft .leftList {
  margin-top: 14rpx;
  text-align: center;
  font-size: 28rpx;
}
.bbox .scrollLeft .fontStyle {
  color: var(--themeColor);
  border-left: 2px solid currentColor;
}
.bbox .scrollRight {
  flex: 3;
}
.bbox .scrollRight .goods_group_title {
  text-align: center;
  padding: 20rpx 0;
}
.bbox .scrollRight .rightListContent {
  display: flex;
  flex-wrap: wrap;
}
.bbox .scrollRight .rightListContent .smbox {
  width: 33.33%;
  text-align: center;
}
.bbox .scrollRight .rightListContent .smbox image {
  width: 60%;
}
